@{

    //var categories = ViewBag.Categories


}

<title>@ViewData["Title"] Product</title>


<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/T2204M_ASPNETMVC.styles.css" asp-append-version="true" />




<h1>List Product :</h1>



<a class="nav-link text-dark btn btn-primary" asp-area="" asp-controller="Product" asp-action="Create">Add Product</a>

@using (Html.BeginForm("Index", "Product", FormMethod.Get, new { @class = "form-control" }))
{
    <div class="form-group">
        <label>Product name: </label>
        <input type="Text" class="form-control mx-sm-3" value="@ViewBag.Keyword" name="searchString" placeholder="Enter name product">
        <button type="submit" class="btn btn-danger" value="Search">Search</button>
    </div>
    <hr />
}

<table class="table table-border  ">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Brand</th>
            <th scope="col">Category</th>




        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Brand.Name</td>
                <td>@item.Category.Name</td>


            </tr>
        }
    </tbody>
</table>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>






